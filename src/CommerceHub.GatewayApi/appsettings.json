{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "Gateway": {
    "IdentityServiceBaseUrl": "http://commercehub-identityservice"
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-proxy": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "search-proxy": {
        "ClusterId": "search",
        "Match": {
          "Path": "/api/search/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "basket-proxy": {
        "ClusterId": "basket",
        "Match": {
          "Path": "/api/basket/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "orders-proxy": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "inventory-proxy": {
        "ClusterId": "inventory",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "payment-proxy": {
        "ClusterId": "payment",
        "Match": {
          "Path": "/api/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "backoffice-proxy": {
        "ClusterId": "backoffice",
        "Match": {
          "Path": "/api/backoffice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-catalogservice"
          }
        }
      },
      "search": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-searchservice"
          }
        }
      },
      "basket": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-basketservice"
          }
        }
      },
      "orders": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-orderingservice"
          }
        }
      },
      "inventory": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-inventoryservice"
          }
        }
      },
      "payment": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-paymentservice"
          }
        }
      },
      "backoffice": {
        "Destinations": {
          "default": {
            "Address": "http://commercehub-backofficeapi"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}